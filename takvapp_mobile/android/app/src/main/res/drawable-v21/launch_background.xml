<?xml version="1.0" encoding="utf-8"?>
<!-- Custom gradient splash background for launch experience -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#101A22"
                android:endColor="#1C262E"
                android:startColor="#050A1A"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>
</layer-list>
